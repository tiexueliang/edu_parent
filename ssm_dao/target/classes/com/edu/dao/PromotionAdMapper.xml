<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.edu.dao.PromotionAdMapper">

    <select id="findAllAdByPage" resultType="com.edu.domain.PromotionAd">
        select * from promotion_ad
    </select>




    <!--添加广告-->
    <insert id="savePromotionAd" parameterType="com.edu.domain.PromotionAd" >
       INSERT  INTO promotion_ad VALUES(NULL,#{name},#{spaceId},#{keyword},#{htmlContent},#{text},#{link},#{startTime},#{endTime},#{createTime},#{updateTime},#{status},#{priority},#{img});

    </insert>

    <!--更新广告-->
    <update id="updatePromotionAd" parameterType="com.edu.domain.PromotionAd" >
       update promotion_ad
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">
                name = #{name},
            </if>

            <if test="spaceId != null and spaceId != ''">
                spaceId = #{spaceId},
            </if>

            <if test="link != null">
                link=#{link},
            </if>

            <if test="status != null and status != '' or status == 0">
                status=#{status},
            </if>

            <if test="img != null">
                img=#{img},
            </if>

            <if test="text != null">
                text=#{text},
            </if>

            <if test="startTime != null">
                startTime=#{startTime},
            </if>

            <if test="endTime != null">
                endTime=#{endTime},
            </if>

            <if test="updateTime != null">
                updateTime=#{updateTime},
            </if>

        </trim>

        <where>
            <if test="id != null and id != '' ">id = #{id}</if>
        </where>
    </update>


    <!--void updatePromotionAdStatus(PromotionAd promotionAd);-->
    <select id="updatePromotionAdStatus" parameterType="com.edu.domain.PromotionAd">
         UPDATE promotion_ad SET STATUS = #{status} ,updatetime = #{updateTime} WHERE id = #{id}
    </select>


    <!--  根据id查询广告信息  -->
    <select id="findPromotionAdById" parameterType="int" resultType="com.edu.domain.PromotionAd">
        SELECT
            id,
            NAME,
            spaceId,
            startTime,
            endTime,
            STATUS,
            img,
            link,
            TEXT
        FROM promotion_ad WHERE id = #{id}
    </select>

</mapper>